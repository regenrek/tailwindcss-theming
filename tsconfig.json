{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
